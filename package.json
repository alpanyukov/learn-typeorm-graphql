    "license": "MIT",
    "description": "Awesome project developed with TypeORM.",
    "devDependencies": {
        "@types/jest": "^23.0.2",
        "@types/node": "^10.3.2",
        "@types/uuid": "^3.4.3",
        "gql2ts": "^1.8.0",
        "graphql-request": "^1.6.0",
        "jest": "^23.1.0",
        "nodemon": "^1.17.5",
        "ts-jest": "^22.4.6",
        "ts-node": "6.1.1",
        "typescript": "2.9.1"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.1",
        "bcryptjs": "^2.4.3",
        "graphql": "^0.13.2",
        "graphql-import": "^0.6.0",
        "graphql-tools": "^3.0.2",
        "graphql-yoga": "^1.14.7",
        "mongodb": "^3.0.10",
        "reflect-metadata": "^0.1.10",
        "tslint-config-prettier": "^1.13.0",
        "typeorm": "0.2.7"
    },
    "scripts": {
        "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
        "test": "NODE_ENV=test jest  --forceExit --detectOpenHandles",
        "gen:schema-types": "gql2ts ./src/schema.graphql -o ./src/types/schema.d.ts"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
